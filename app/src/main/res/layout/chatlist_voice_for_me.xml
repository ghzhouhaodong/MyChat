<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingLeft="80dip"
    android:paddingRight="8dip"
    android:paddingBottom="10dip"
    android:paddingTop="10dip">

    <ImageView
        android:id="@+id/chatlist_voicehead_me"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginLeft="5dip"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ease_chatto_voice_playing"
        android:background="@drawable/ic_launcher"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
         android:text="11''"
          android:id="@+id/chatlist_voice_time_me"
       android:layout_centerVertical="true"
      android:layout_toLeftOf="@+id/chatlist_voice_me"

      />




    <ImageView
        android:id="@+id/chatlist_voice_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/chatlist_voicehead_me"
        android:layout_alignTop="@id/chatlist_voicehead_me"
        android:src="@drawable/ic_launcher"
        android:background="@drawable/ease_chatto_bg_normal"
        android:paddingTop="13dip"
        android:paddingBottom="18dip" />




</RelativeLayout>

