
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorwrite"
    tools:context="com.zhd.lenovo.mychat.fragments.RegisterSms">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/backgroud"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_login_two"
            android:src="@drawable/login_new_arrow"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="登录"
            android:layout_centerVertical="true"
            android:textColor="@color/colorwrite"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <LinearLayout
      android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
     android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       android:text="输入你的手机号"
          android:textSize="20sp"
            />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:text="手机号仅用于登录和保护账号"
         />
    </LinearLayout>


    <EditText
      android:inputType="number"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
   android:layout_marginTop="50dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/phone_num"
      android:hint="请输入手机号"
     />
  <LinearLayout
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

      <EditText
          android:id="@+id/phone_yanzheng"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:hint="验证码" />
      <Button
          android:textSize="10sp"
          android:textColor="@color/colorwrite"
          android:padding="5dp"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:text="获取验证码"
         android:id="@+id/yanzheng_btn"
           android:background="@drawable/selecter_but_three"

          />



  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        >
        <Button

            android:layout_marginTop="50dp"
             android:id="@+id/register_sms_btn"
            android:text="注册"
            android:background="@drawable/selecter_but_two"
            android:textColor="@color/colorwrite"
            android:layout_width="280dp"
            android:layout_height="45dp" />


    </LinearLayout>
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
      android:gravity="center_horizontal"

     >
   <TextView
      android:layout_marginBottom="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
      android:text="通过注册，即表示接受有缘网络使用协议"
       android:textColor="@color/gray"
       />



 </RelativeLayout>

</LinearLayout>
