<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhd.lenovo.mychat.activirys.AddFriendActivity">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/backgroud"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="添加好友"
            android:layout_centerVertical="true"
            android:textColor="@color/colorwrite"
            android:layout_marginRight="10dp"


            />
    </RelativeLayout
        >
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
   android:id="@+id/add_friend_text"
     android:paddingLeft="@dimen/margin_12dp"
    android:text="内容"
     android:layout_marginTop="100dp"
     />
  <Button
     android:background="@drawable/selecter_but_two"
      android:textColor="@color/colorwrite"
      android:layout_marginTop="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="确认添加"
     android:id="@+id/add_friend_enter"

      />


</LinearLayout>
